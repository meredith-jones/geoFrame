<h1>Add chat room</h1>

<%= form_for @chat do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.hidden_field :longitude, value: @chat_location[0] %>
    <%= f.hidden_field :latitude, value: @chat_location[1] %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <%= f.submit "Add!", class: 'btn btn-primary' %>
<% end %>